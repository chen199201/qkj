/* pages/groupLuckDraw/index.wxss */
.luckDraw {
  position: fixed;
  width: 100%;
  height: 100%;
  overflow: scroll;
  background: #F6F6F6;
}

.headB {
  display: flex;
  width: 100%;
  height: 184rpx;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding: 0 24rpx 0 23rpx;
  box-sizing: border-box;
  margin-top: 127rpx;
}
.myIpx{
  margin-top: 179rpx;
}

.headB span {
  display: inline-flex;
  flex: 1;
  height: 136rpx;
  align-items: center;
}

.headB span:first-child {
  margin-right: 27rpx;
  background: url('https://image.sqqmall.com/2020/06/24/92c3678cd447b3a2.png') no-repeat;
  background-size: 100% 100%;
}

.headB span:last-child {
  background: url('https://image.sqqmall.com/2020/06/24/f10c645fa9a33bce.png') no-repeat;
  background-size: 100% 100%;
}

.headB span image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 40rpx 0 30rpx;
}

.headB span text {
  font-size: 32rpx;
  color: white;
}

.groupT {
  display: flex;
  padding: 0 24rpx 0 24rpx;
  flex-wrap: wrap;
}

.groupT p {
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 32rpx;
  color: #333;
}

.groupT ul {
  display: inline-flex;
  width: 100%;
  flex-wrap: wrap;
  margin-bottom: 100rpx;

}

.groupT ul li {
  display: inline-flex;
  width: 100%;
  height: 192rpx;
  flex-wrap: wrap;
  box-sizing: border-box;
  background: white;
  padding: 24rpx;
  border-radius: 8rpx;
  box-shadow: 0px 2rpx 4rpx 0px rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
}
.groupT ul li:last-child{
  margin-bottom: 20rpx;
}
.groupT ul li span {
  display: inline-flex;
  flex-wrap: wrap;
}

.groupT ul li .a{
  background:linear-gradient(135deg,rgba(105,212,121,.3) 0%,rgba(73,166,92,.3) 100%);
}
.groupT ul li .a text{
  color:#49A65C;
}
.groupT ul li .b{
  background:linear-gradient(133deg,rgba(255,225,128,.3) 0%,rgba(255,192,73,.3) 100%);
}
.groupT ul li .b text{
  color:#FFBF46;
}
.groupT ul li .c{
  background:linear-gradient(135deg,rgba(245,126,142,.3) 0%,rgba(232,72,85,.3) 100%);
}
.groupT ul li .c text{
  color:#E84855;
}
.groupT ul li .d{
  background:rgba(51,51,51,0.1);
}
.groupT ul li .d text{
  color:#333;
}

.groupT ul li span:first-child {
  width: 76rpx;
  height: 40rpx;
  border-radius: 8rpx;
  color: #333333;
  font-size: 20rpx;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}
.groupT ul li span:last-child{
  flex: 1;
  align-content: space-between;
}
.groupT ul li span:last-child text{
  width: 100%;
}
.groupT ul li span:last-child .title{
  font-size: 32rpx;
  color: #333;
}
.groupT ul li span:last-child .number,.groupT ul li span:last-child .time{
  font-size: 24rpx;
  color: #999;
}
.backBtn{
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background: white;

}
.backBtn .bottons{
  width: 100%;
  height: 70rpx;
  margin: 0 24rpx 0 24rpx;
  background: linear-gradient(135deg,rgba(105,212,121,1) 0%,rgba(73,166,92,1) 100%);
  border-radius:44rpx;
  font-size: 32rpx;
  color: white;
  font-weight: normal;
}