/* pages/exchangeInfo/index.wxss */
.exchangeInfo {
  position: fixed;
  width: 100%;
  height: 100%;
  background: #F6F6F6;
  overflow: scroll;
}

.dataTit {
  height: 94rpx;
  line-height: 94rpx;
  font-size: 32rpx;
  color: #333;
  text-indent: 24rpx;
}

.infoList ul {
  display: flex;
  box-sizing: border-box;
  flex-wrap: wrap;
  background: white;
  margin: 0 24rpx 0 24rpx;
  padding: 0 24rpx 0 24rpx;
  box-shadow: 0px 2rpx 4rpx 0px rgba(0, 0, 0, 0.06);
  border-radius: 8rpx;
  margin-bottom: 120rpx;

}

.infoList ul .dataType {
  display: inline-flex;
  width: 100%;
  height: 78rpx;
  align-items: center;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
  border-bottom: 2rpx solid #EEEEEE;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.infoList ul .dataType view:first-child text:first-child {
  margin-right: 188rpx;
}
.infoList ul .dataType view:last-child text:first-child {
  margin-right: 100rpx;
}
.infoList ul .dataLine {
  display: inline-flex;
  width: 100%;
  flex-wrap: wrap;
}

.infoList ul .dataLine li {
  display: inline-flex;
  width: 100%;
  height: 60rpx;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.infoList ul .dataLine li view {
  display: inline-flex;
  align-items: center;
}

.infoList ul .dataLine li image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.infoList ul .dataLine li .dataName {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
  margin-right: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.infoList ul .dataLine li .dataTime{
  width: 132rpx;
  font-size: 24rpx;
  margin-right: 42rpx;
}

.infoList ul .dataLine li .dataBtn {
  font-size: 20rpx;
}

.infoList ul .dataLine li .dataBtn i {
  padding: 0 12rpx 0 12rpx;
  height: 40rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}

.infoList ul .dataLine li .dataBtn .send {
  border: 2rpx solid #FFBF46;
  color: #FFBF46;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.infoList ul .dataLine li .dataBtn .over {
  border: 2rpx solid#E84855;
  color: #E84855;
}

.infoList ul .dataLine li .dataLook {
  font-size: 24rpx;
  color: #49A65C;
  text-decoration: underline;
}

.backBtn {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background: white;
}

.backBtn .bottons {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0 24rpx 0 24rpx;
  background: linear-gradient(135deg, rgba(105, 212, 121, 1) 0%, rgba(73, 166, 92, 1) 100%);
  border-radius: 44rpx;
  font-size: 32rpx;
  color: white;
  font-weight: normal;
}