/* pages/delivery/index.wxss */
.delivery {
  position: fixed;
  width: 100%;
  height: 100%;
  background: #F6F6F6;
  overflow-y: scroll;
}

.headB {
  display: flex;
  width: 100%;
  height: 184rpx;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding: 0 24rpx 0 23rpx;
  box-sizing: border-box;
}

.headB span {
  display: inline-flex;
  flex: 1;
  height: 136rpx;
  align-items: center;
}

.headB span:first-child {
  margin-right: 27rpx;
  background: url('https://image.sqqmall.com/2020/06/24/92c3678cd447b3a2.png') no-repeat;
  background-size: 100% 100%;
}

.headB span:last-child {
  background: url('https://image.sqqmall.com/2020/06/24/f10c645fa9a33bce.png') no-repeat;
  background-size: 100% 100%;
}

.headB span image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 40rpx 0 30rpx;
}

.headB span text {
  font-size: 32rpx;
  color: white;
}




.groupT {
  display: flex;
  padding: 0 24rpx 0 24rpx;
  flex-wrap: wrap;
}

.groupT p {
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 32rpx;
  color: #333;
}

.groupT ul {
  display: inline-flex;
  width: 100%;
  flex-wrap: wrap;
  background: white;
  box-shadow: 0px 2rpx 4rpx 0px rgba(0, 0, 0, 0.06);
  border-radius: 8rpx;
  margin-bottom: 120rpx;
  padding: 0 24rpx 0 24rpx;
}

.groupT ul .titles{
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  font-size: 24rpx;
  color: #999;
  border-bottom: 2rpx solid #EEEEEE;
}
.groupT ul .titles text:last-child{
  margin-right: 134rpx;
}

.groupT ul li {
  display: inline-flex;
  width: 100%;
  height: 72rpx;
  flex-wrap: wrap;
  box-sizing: border-box;
  margin-bottom: 14rpx;
}
.groupT ul li:last-child{
  margin-bottom: 0;
  border-bottom: none;
}
.groupT ul li span {
  display: inline-flex;
  flex-wrap: wrap;
}



.groupT ul li span:first-child {
  width: 76rpx;
  height: 40rpx;
  border-radius: 8rpx;
  color: #333333;
  font-size: 20rpx;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  margin-top: 24rpx;
}
.groupT ul li span:last-child{
  flex: 1;
  align-content: space-between;
}
.groupT ul li span:last-child view{
  width: 100%;
}
.groupT ul li span:last-child .title{
  display: inline-flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  height: 86rpx;
  border-bottom: 2rpx solid #F1F1F1;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.groupT ul li span:last-child .bf{
  color: #333333;
  margin-left: 20rpx;
}
.groupT ul li span:last-child .number,.groupT ul li span:last-child .time{
  font-size: 24rpx;
  color: #999;
}
.groupT ul li span:last-child .number{
  margin-bottom: 20rpx;
}
.groupT ul li span:last-child .time{
  margin-bottom: 20rpx;
}
.groupT ul li span:last-child .btn{
  display: inline-flex;
  width: 100%;
  height: 50rpx;
  font-size: 28rpx;
  justify-content: flex-end;
  margin-right: 24rpx;
  margin-top: 26rpx;
}
.groupT ul li span:last-child .btn i{
  display: inline-flex;
  align-items: center;
  height: 100%;
  padding: 0 24rpx 0 24rpx;
  border: 2rpx solid #999999;
  border-radius: 30rpx;
  box-sizing: border-box;
  margin-left: 20rpx;
  color: #666;
}

.groupT ul li span:last-child .btn i:first-child{
  border-color: #49A65C;
  color: #49A65C;
}
.groupT ul li span:last-child .btn i:nth-child(2){
  border-color: #FFBF46;
  color: #FFBF46;
}
.backBtn{
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background: white;

}
.backBtn .bottons{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0 24rpx 0 24rpx;
  background: linear-gradient(135deg,rgba(105,212,121,1) 0%,rgba(73,166,92,1) 100%);
  border-radius:44rpx;
  font-size: 32rpx;
  color: white;
  font-weight: normal;
}