/* components/floatmenu/index.wxss */
.menus {
  position: fixed;
  display: flex;
  width: 100%;
  padding: 0 24rpx 0 24rpx;
  align-content: flex-start;
  flex-wrap: wrap;
  z-index: 5;
  box-sizing: border-box;
}

.menus .title {
  position: relative;
  width: 100%;
  height: 52rpx;
  margin: 58rpx 0 16rpx 0;
  text-align: center;
  line-height: 52rpx;
  font-size: 37rpx;
  color: white;
}

.menus .title .leftTab {
  position: absolute;
  display: inline-flex;
  width: 174rpx;
  height: 64rpx;
  padding: 0 26rpx 0 26rpx;
  border: 1rpx solid #EEEEEE;
  box-sizing: border-box;
  border-radius: 32rpx;
  left: 0;
  top: -8rpx;
  justify-content: space-between;
}

.menus .title .leftTab span {
  display: inline-flex;
  flex: 1;
  align-items: center;
  justify-content: center;
}

.menus .title .leftTab image {
  position: relative;
  width: 36rpx;
  height: 36rpx;
}

.menus .title .leftTab span:first-child i {
  display: inline-block;
  position: absolute;
  content: '';
  width: 2rpx;
  height: 40rpx;
  background: #EEEEEE;
  left: 50%;
  margin-left: -rpx;
}
.floatMenu{
  position: absolute;
  display: flex;
  padding: 24rpx 50rpx 24rpx 50rpx;
  width: 260rpx;
  height: 526rpx;
  background: white;
  border-radius: 8rpx;
  z-index: 2;
  top:92rpx;
  box-shadow:0px 4rpx 8rpx 0px rgba(1,110,24,0.12);
  box-sizing: border-box;
  flex-wrap: wrap;
  align-content: flex-start;
}
.floatMenu li{
  display: inline-flex;
  width: 100%;
  height: 40rpx;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 48rpx;
}
.floatMenu li image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.floatMenu li i{
  color: #666660;
  font-size: 28rpx;
}

.bigone{
  background: white;
  box-shadow:0px -2px 8px 0px rgba(0,0,0,0.06);
}
.bigone b{
  color: #333 !important;
}
.ipx{
  padding-top: 52rpx;
